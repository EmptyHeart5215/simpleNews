<?xml version="1.0" encoding="utf-8"?>
<com.example.mysimplenew.viewpageranimator.MyDrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.mysimplenew.MainActivity">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


            <android.support.design.widget.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:background="@color/colorAccent"
                android:layout_height="?actionBarSize">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    app:theme="@style/ThemeOverlay.AppCompat.Dark"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"
                    app:titleTextColor="#FFF"

                    app:title="新闻">

                </android.support.v7.widget.Toolbar>
            </android.support.design.widget.AppBarLayout>
        <!--app:layout_behavior="@string/appbar_scrolling_view_behavior"-->
            <FrameLayout

                android:id="@+id/fragmentall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></FrameLayout>




    </LinearLayout>
    <android.support.design.widget.NavigationView

        android:id="@+id/navigation"
        app:itemTextColor="@color/select_item_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:itemIconTint="@color/select_item_menu"
        app:menu="@menu/menu_drawlayout"
        app:headerLayout="@layout/layout_header"
        android:layout_gravity="left"
        ></android.support.design.widget.NavigationView>

</com.example.mysimplenew.viewpageranimator.MyDrawerLayout>
